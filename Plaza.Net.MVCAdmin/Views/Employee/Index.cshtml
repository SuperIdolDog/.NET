        // ====================== 删除相关函数 ======================
        function showDeleteConfirm(rows) {
            currentDeleteMode = rows.length > 1 ? 'multiple' : 'single';
            const countInfo = currentDeleteMode === 'multiple'
                ? `已选择 ${rows.length} 条记录`
                : `确定要删除 "${rows[0].name}" 吗？`;

            $('#deleteCountInfo').text(countInfo);
            $('#deleteConfirmModal').modal('show');

            // 存储要删除的ID
            window.deleteIds = rows.map(row => row.id);
        }

        function confirmDelete() {
            $.ajax({
                url: currentDeleteMode === 'multiple'
                    ? '/Employee/DeleteRange'
                    : '/Employee/Delete',
                type: 'POST',
                data: currentDeleteMode === 'multiple'
                    ? { ids: window.deleteIds }
                    : { id: window.deleteIds[0], employee: { id: window.deleteIds[0] } },
                success: function(response) {
                    if (response.success) {
                        $('#deleteConfirmModal').modal('hide');
                        $('#employeeTable').bootstrapTable('refresh');
                        showToast(currentDeleteMode === 'multiple'
                            ? '批量删除成功'
                            : '删除成功');
                    } else {
                        showToast(`删除失败: ${response.message || '未知错误'}`, true);
                    }
                },
                error: function(xhr) {
                    const errorMsg = xhr.responseJSON?.message || xhr.statusText || '服务器错误';
                    showToast(`删除失败: ${errorMsg}`, true);
                }
            });
        }

