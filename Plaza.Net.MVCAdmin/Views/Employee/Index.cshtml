        function validateEmployeeForm() {
            const form = $('#employeeForm')[0];
            form.classList.add('was-validated');

            let isValid = true;
            $('#employeeForm [required]').each(function() {
                if (!$(this).val()) {
                    isValid = false;
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            if ($('#employee-plazaId').val() === '') {
                isValid = false;
                $('#employee-plazaId').addClass('is-invalid');
            }

            if ($('#employee-floorId').val() === '') {
                isValid = false;
                $('#employee-floorId').addClass('is-invalid');
            }

            if ($('#employee-storeId').val() === '') {
                isValid = false;
                $('#employee-storeId').addClass('is-invalid');
            }

            if ($('#employee-roleId').val() === '') {
                isValid = false;
                $('#employee-roleId').addClass('is-invalid');
