                    },
                    error: function(xhr) {
                        const errorMsg = xhr.responseJSON?.message || xhr.statusText || '服务器错误';
                        showToast(`获取员工数据失败: ${errorMsg}`, true);
                        reject(errorMsg);
                    }
                });
