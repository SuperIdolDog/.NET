        function performBasicSearch() {
            const keyword = $('#searchBox').val().trim();
            $('#orderTable').bootstrapTable('refresh', {
                query: {
                    keyword: keyword
                }
            });
        }

        function submitSearchForm() {
            const plazaId = $('#search-plazaId').val();
            const floorId = $('#search-floorId').val();
            const storeId = $('#search-storeId').val();
            const employeeId = $('#search-employeeId').val();
            const orderStatusId = $('#search-orderStatusId').val();
            const customer = $('#search-customer').val();
            const startTime = $('#search-startTime').val();
            const endTime = $('#search-endTime').val();

            $('#orderTable').bootstrapTable('refresh', {
                query: {
                    plazaId: plazaId,
                    floorId: floorId,
                    storeId: storeId,
                    employeeId: employeeId,
                    orderStatusId: orderStatusId,
                    customer: customer,
                    startTime: startTime,
                    endTime: endTime
                }
            });

            $('#searchModal').modal('hide');
