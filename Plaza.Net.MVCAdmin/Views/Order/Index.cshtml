@section Scripts {
    <script>
        // ====================== 全局变量声明 ======================
        let currentMode = 'add'; // 当前操作模式：'add' 或 'edit'
        let currentDeleteMode = null; // 当前删除模式：'single' 或 'multiple'

        // ====================== 页面初始化函数 ======================
        $(document).ready(function() {
            initTable();
            bindEventHandlers();
            initDefaultPlaza();
        });

        // ====================== 初始化默认广场数据 ======================
        function initDefaultPlaza() {
            const plazaId = $('#order-plazaId option:first').val();
            if (plazaId && plazaId !== '0') {
                loadFloorDropdown(plazaId);
                loadStoreDropdown(plazaId, null);
            }
        }

        // ====================== 表格相关函数 ======================
        function initTable() {
            $('#orderTable').bootstrapTable({
                classes: 'table table-bordered table-hover table-striped',
                url: '/Order/GetOrdersData',
                uniqueId: 'id',
                idField: 'id',
                clickToSelect: true,
                dataType: 'json',
                method: 'get',
                toolbar: '#toolbar',
                pagination: true,
                showColumns: true,
                showRefresh: true,
                showButtonIcons: true,
                showButtonText: false,
                showFullscreen: true,
                totalField: 'total',
                undefinedText: '-',
                sortOrder: "asc",
                sidePagination: "server",
                pageNumber: 1,
                pageSize: 10,
                pageList: [10, 25, 50, 100],
                paginationLoop: true,
                paginationPagesBySide: 2,
                buttonsClass: 'default',
                buttonsPrefix: 'btn',
                iconsPrefix: 'mdi',
                iconSize: 'mini',
                icons: {
                    refresh: 'mdi-refresh',
                    export: 'mdi-export',
                    columns: 'mdi-table-column-remove',
                    fullscreen: 'mdi-monitor-screenshot'
                },
                showExport: true,
                buttonsAlign: "right",
                exportDataType: "basic",
                exportOptions: {
                    ignoreColumn: [0],
                    fileName: '订单数据',
                    worksheetName: 'Sheet1',
                    tableName: '订单信息表',
                    excelstyles: ['background-color', 'color', 'font-size', 'font-weight'],
                },
                exportTypes: ['json', 'xml', 'csv', 'txt', 'sql', 'doc', 'excel'],
                columns: [
                    {
                        field: 'state',
                        checkbox: true,
                        widthUnit: 'rem'
                    },
                    {
                        field: 'id',
                        title: '编号',
                        align: 'center',
                        sortable: true,
                        sortName: 'sortId',
                        switchable: false,
                        widthUnit: 'rem'
                    },
                    {
                        field: 'code',
                        align: 'center',
                        title: '订单编号'
                    },
                    {
                        field: 'orderStatus',
                        align: 'center',
                        title: '订单状态'
                    },
                    {
                        field: 'totalAmount',
                        align: 'center',
                        title: '总金额',
                        formatter: function(value) {
                            return `¥${value.toFixed(2)}`;
                        }
                    },
                    {
                        field: 'customerName',
                        align: 'center',
                        title: '客户名称'
                    },
                    {
                        field: 'shippingAddress',
                        align: 'center',
                        title: '配送地址'
                    },
                    {
                        field: 'plazaName',
                        align: 'center',
                        title: '所属广场'
                    },
                    {
                        field: 'floorName',
                        align: 'center',
                        title: '所属楼层'
                    },
                    {
                        field: 'storeName',
                        align: 'center',
                        title: '所属店铺'
                    },
                    {
                        field: 'employeeName',
                        align: 'center',
                        title: '处理员工'
                    },
                    {
                        field: 'createTime',
                        align: 'center',
                        title: '创建时间',
                        formatter: function(value) {
                            return formatDateTime(value);
                        }
                    },
                    {
                        field: 'operate',
                        title: '操作',
                        formatter: function() {
                            return `<div class="btn-group">
                                <button class="btn btn-sm btn-indigo btn-round detail-btn" title="详情"><span class="mdi mdi-information"></span></button>
                                <button class="btn btn-sm btn-primary btn-round edit-btn" title="编辑"><span class="mdi mdi-pencil"></span></button>
                                <button class=" btn btn-sm btn-cyan btn-round list-btn" title="列表"><span class="mdi mdi-format-list-bulleted"></span></button>
                                <button class="btn btn-sm btn-danger btn-round del-btn" title="删除"><span class="mdi mdi-close"></span></button>
                            </div>`;
                        },
                        events: {
                            'click .detail-btn': function(event, value, row) {
                                event.stopPropagation();
                                showDetail(row);
                            },
                            'click .edit-btn': function(event, value, row) {
                                event.stopPropagation();
                                showEditModal(row);
                            },
                            'click .del-btn': function(event, value, row) {
                                event.stopPropagation();
                                showDeleteConfirm([row]);
                            },
                             'click .list-btn':function(event, value, row, index) {
                                event.stopPropagation();
                                list(row);
                            },
                        }
                    }
                ],
                queryParams: function(params) {
                    return {
                        pageSize: params.limit,
                        pageIndex: Math.floor(params.offset / params.limit) + 1,
                        sort: params.sort || "Id",
                        sortOrder: params.order || "asc",
                        keyword: $('#searchBox').val().trim(),
                        customer: $('#search-customer').val().trim(),
                        plazaId: $('#search-plazaId').val(),
                        floorId: $('#search-floorId').val(),
                        storeId: $('#search-storeId').val(),
                        employeeId: $('#search-employeeId').val(),
                        orderStatusId: $('#search-orderStatusId').val(),
                        startTime: $('#search-startTime').val(),
                        endTime: $('#search-endTime').val()
                    };
                },
                onLoadSuccess: function() {
                    $("[data-bs-toggle='tooltip']").tooltip();
                    updateButtonState();
                },
                onCheck: updateButtonState,
                onUncheck: updateButtonState,
                onCheckAll: updateButtonState,
                onUncheckAll: updateButtonState
            });
        }

        // ====================== 事件处理函数 ======================
        function showAddModal() {
            currentMode = 'add';
            $('#orderModalTitle').text('新增订单');
            $('#orderForm')[0].reset();

            $('#order-totalAmount').val(0);
            $('#orderForm').find('[name="isDeleted"]').val('0');
            resetDropdowns();
            $('#orderModal').modal('show');
        }

        function showEditModal(row) {
            currentMode = 'edit';
            $('#orderModalTitle').text('编辑订单');
            resetDropdowns();

            $('#order-id').val(row.id);
            //$('#order-code').val(row.code);
            $('#order-orderStatuItemId').val(row.orderStatuItemId);
            $('#order-totalAmount').val(row.totalAmount || 0);
            $('#order-customerName').val(row.customerName).prop('readonly', true);;
            $('#order-shippingAddress').val(row.shippingAddress);
            $('#order-createTime').val(formatDateTime(row.createTime) || '');
            $('#order-updateTime').val(formatDateTime(row.updateTime) || '');

            $('#order-plazaId').val(row.plazaId);
            loadFloorDropdown(row.plazaId).then(() => {
                $('#order-floorId').val(row.floorId);
                return loadStoreDropdown(row.plazaId, row.floorId);
            }).then(() => {
                $('#order-storeId').val(row.storeId);
                return loadEmployeeDropdown(row.storeId);
            }).then(() => {
                $('#order-employeeId').val(row.employeeId);
                $('#orderForm').removeClass('was-validated');
                $('#orderModal').modal('show');
            });
        }
        //         function showEditModal(row) {
        //     currentMode = 'edit';
        //     $('#orderModalTitle').text('编辑订单');
        //     resetDropdowns();

        //     $('#order-id').val(row.id);
        //     //$('#order-code').val(row.code);
        //     $('#order-orderStatuItemId').val(row.orderStatuItemId).prop('disabled', false); // 允许编辑订单状态
        //     $('#order-totalAmount').val(row.totalAmount).prop('readonly', true); // 设置为只读
        //     $('#order-customerName').val(row.customerName).prop('readonly', true); // 设置为只读
        //     $('#order-shippingAddress').val(row.shippingAddress).prop('readonly', false); // 允许编辑配送地址
        //     $('#order-createTime').val(formatDateTime(row.createTime) || '').prop('readonly', true); // 设置为只读
        //     $('#order-updateTime').val(formatDateTime(row.updateTime) || '').prop('readonly', true); // 设置为只读

        //     // 禁用下拉框
        //     $('#order-plazaId').val(row.plazaId).prop('disabled', true);
        //     $('#order-floorId').val(row.floorId).prop('disabled', true);
        //     $('#order-storeId').val(row.storeId).prop('disabled', true);
        //     $('#order-employeeId').val(row.employeeId).prop('disabled', true);

        //     $('#orderForm').removeClass('was-validated');
        //     $('#orderModal').modal('show');
        // }
        function showDetail(row) {
            const detailModal = new bootstrap.Modal(document.getElementById('detailModal'));

            $('#detail-code').text(row.code || '无');
            $('#detail-orderStatus').text(row.OrderStatus || '无');
            $('#detail-totalAmount').text(row.totalAmount ? `¥${row.totalAmount.toFixed(2)}` : '无');
            $('#detail-customerName').text(row.customerName || '无');
            $('#detail-shippingAddress').text(row.shippingAddress || '无');
            $('#detail-plazaName').text(row.plazaName || '无');
            $('#detail-floorName').text(row.floorName || '无');
            $('#detail-storeName').text(row.storeName || '无');
            $('#detail-employeeName').text(row.EmployeeName || '无');
            $('#detail-createTime').text(formatDateTime(row.createTime) || '无');
            $('#detail-updateTime').text(formatDateTime(row.updateTime) || '无');

            detailModal.show();
        }

        function submitOrderForm() {
            if (!validateOrderForm()) return;

            const formData = {
                //code: $('#order-code').val(),
                orderStatuItemId: $('#order-orderStatuItemId').val(),
                totalAmount: $('#order-totalAmount').val(),
                customerName: $('#order-customerName').val(),
                shippingAddress: $('#order-shippingAddress').val(),
                plazaId: $('#order-plazaId').val(),
                floorId: $('#order-floorId').val(),
                storeId: $('#order-storeId').val(),
                employeeId: $('#order-employeeId').val(),
                isDeleted: false
            };

            if (currentMode === 'edit') {
                formData.id = $('#order-id').val();
            }

            const url = currentMode === 'add' ? '/Order/Add' : '/Order/Edit';
            const successMessage = currentMode === 'add' ? '新增成功' : '更新成功';

            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        $('#orderModal').modal('hide');
                        $('#orderTable').bootstrapTable('refresh');
                        showToast(successMessage);
                    } else {
                        showToast(`操作失败: ${response.message || '未知错误'}`, true);
                    }
                },
                error: function(xhr, status, error) {
                    const errorMsg = xhr.responseJSON?.message || xhr.statusText || '服务器错误';
                    showToast(`操作失败: ${errorMsg}`, true);
                }
            });
        }

        function validateOrderForm() {
            const form = $('#orderForm')[0];
            form.classList.add('was-validated');

            let isValid = true;
            $('#orderForm [required]').each(function() {
                if (!$(this).val()) {
                    isValid = false;
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
                const totalAmount = parseFloat($('#order-totalAmount').val());
        if (isNaN(totalAmount) || totalAmount < 0) {
            isValid = false;
            $('#order-totalAmount').addClass('is-invalid');
        } else {
            $('#order-totalAmount').removeClass('is-invalid');
        }
            if ($('#order-plazaId').val() === '') {
