                        <div class="col-md-6">
                            <label class="form-label">处理员工</label>
                            <select class="form-select" name="employeeId" id="order-employeeId">
                                <option value="">请选择员工</option>
                                @foreach (var employee in Model.Employees)
                                {
                                    <option value="@employee.Id">@employee.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">创建时间</label>
                            <input type="text" class="form-control" readonly name="createTime" id="order-createTime">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">更新时间</label>
                            <input type="text" class="form-control" readonly name="updateTime" id="order-updateTime">
